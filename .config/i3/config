				separator $i3bar2
        background $i3bar1
        statusline $i3bar1
				                    #Border  Back     Text 
        focused_workspace 	$i3bar3 $i3bar6 $i3bar4
        active_workspace 		$i3bar3 $i3bar5 $i3bar4              # 
        inactive_workspace 	$i3bar5 $i3bar1 $i3bar3
        urgent_workspace 		$i3bar7 $i3bar8 $i3bar2
    }

## please set your primary output first. Example: 'xrandr --output eDP1 --primary'
tray_output primary
# tray_output LDVS-1

	bindsym button4 nop
	bindsym button5 nop

	strip_workspace_numbers yes
}
