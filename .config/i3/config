bindsym Shift+XF86AudioRaiseVolume		exec $nsi lmc up 10
bindsym Control+XF86AudioLowerVolume	exec $nsi lmc down 1
bindsym Control+XF86AudioRaiseVolume	exec $nsi lmc up 1
